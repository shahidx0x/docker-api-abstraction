            "body": {
              "mode": "raw",
              "raw": "{\n  \"Image\": \"nginx:latest\",\n  \"name\": \"my-nginx\",\n  \"ExposedPorts\": {\n    \"80/tcp\": {}\n  },\n  \"HostConfig\": {\n    \"PortBindings\": {\n      \"80/tcp\": [\n        {\n          \"HostPort\": \"8080\"\n        }\n      ]\n    }\n  }\n}"
