            ],
            "url": {
              "raw": "{{baseUrl}}/api/docker/containers?all=true",
              "host": ["{{baseUrl}}"],
              "path": ["api", "docker", "containers"],
              "query": [
                {
                  "key": "all",
                  "value": "true",
