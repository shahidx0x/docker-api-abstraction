          "name": "Restart Container",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "X-API-Key",
                "value": "{{apiKey}}",
                "type": "text"
              }
            ],
            "url": {
              "raw": "{{baseUrl}}/api/docker/containers/:id/restart?timeout=10",
              "host": ["{{baseUrl}}"],
              "path": ["api", "docker", "containers", ":id", "restart"],
              "query": [
                {
                  "key": "timeout",
                  "value": "10",
                  "description": "Seconds to wait before killing"
                }
              ],
              "variable": [
