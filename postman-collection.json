            "url": {
              "raw": "{{baseUrl}}/api/docker/containers/:id",
              "host": ["{{baseUrl}}"],
              "path": ["api", "docker", "containers", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "container_id_or_name",
